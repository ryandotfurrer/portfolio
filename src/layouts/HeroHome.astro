---
import LinkButtonPrimary from "../components/LinkButtonPrimary.astro";
import LinkButtonSecondary from "../components/LinkButtonSecondary.astro";

export interface Props {
  heroHeader: string;
  heroDescription?: string;
  heroParagraph?: string;
}

const { heroDescription, heroHeader, heroParagraph }: Props = Astro.props;
---

<section
  id="hero"
  class="flow container mx-auto grid h-3/4 grid-cols-1 place-content-center px-6 py-12 xl:max-w-screen-xl xl:px-4 xl:py-24"
>
  <div id="hero-text-container" class="grid gap-2">
    <div
      id="hero-header-container"
      class="animate-fade animate-delay-700 animate-duration-500 animate-once animate-ease-in-out xl:max-w-[63%]"
    >
      <h2 class="text-3xl leading-tight">
        {heroHeader}
      </h2>
    </div>
    <div
      id="hero-description-container"
      class="animate-fade-down animate-delay-1000 animate-duration-700 animate-once animate-ease-in-out xl:max-w-[63%]"
    >
      <p class="text-balance text-2xl font-semibold leading-tight">
        {heroDescription}
      </p>
    </div>
    <div
      id="hero-paragraph-container"
      class="animate-fade-down animate-delay-[1200ms] animate-duration-500 animate-once animate-ease-in-out xl:max-w-[60%]"
    >
      <p class="text-balance text-xl font-semibold leading-none">
        {heroParagraph}
      </p>
    </div>
  </div>
  <div
    id="header-cta-container"
    class="container animate-fade-down animate-delay-1000 animate-duration-700 animate-once animate-ease-in-out"
  >
    <div>
      <div
        id="hero-link-container"
        class="grid gap-4 text-lg font-semibold md:max-w-fit md:grid-cols-2 md:gap-8"
      >
        <LinkButtonPrimary linkURL="/projects" linkText="View my projects">
          <i slot="pre-icon" class="fa-solid fa-code-branch"></i>
          <i
            slot="post-icon"
            class="fa-solid fa-arrow-right text-zinc-50 dark:text-zinc-900"></i>
        </LinkButtonPrimary>
        <LinkButtonSecondary linkURL="/blog" linkText="Read my articles">
          <i slot="pre-icon" class="fa-solid fa-newspaper"></i>
          <i
            slot="post-icon"
            class="fa-solid fa-arrow-right text-emerald-600 transition-all duration-300 ease-in-out group-hover:pl-8 group-hover:text-zinc-50 dark:text-emerald-400 dark:group-hover:text-zinc-900"
          ></i>
        </LinkButtonSecondary>
      </div>
    </div>
  </div>
</section>
