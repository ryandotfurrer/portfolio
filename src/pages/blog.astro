---
import "../styles/global.css";
import { useStoryblokApi } from "@storyblok/astro";
import StoryblokComponent from "@storyblok/astro/StoryblokComponent.astro";
import HeaderNavBar from "../layouts/HeaderNavBar.astro";
import Hero from "../layouts/Hero.astro";
import Footer from "../layouts/Footer.astro";

const storyblokApi = useStoryblokApi();
const { data } = await storyblokApi.get("cdn/stories/blog", {
  version: import.meta.env.DEV ? "draft" : "published",
});
const content = data.story.content;
const pageTitle = "Blog";
const heroHeader = "Learn what I'm up to with articles";
const heroDescription = "Sometimes I write things about things.";
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="author" content="Ryan Furrer" />
    <meta
      name="description"
      content="Ryan Furrer, a software engineer, streamer, and blogger with a focus on UX development. Proficient in React, NextJS, Astro, and Tailwind CSS, I bring transferable skills in project management, problem-solving, and more."
    />
    <meta property="og:title" content={pageTitle} />
    <meta property="og:description" content={heroHeader} />
    <meta
      property="og:image"
      content="https://a-us.storyblok.com/f/1016568/1200x630/f5c66c3b30/og-image.png"
    />
    <meta
      property="og:image:alt"
      content="Ryan Furrer, a software engineer, streamer, and blogger"
    />
    <meta property="og:site_name" content="Ryan Furrer" />
    <meta name="twitter:card" content="summary_large_image" />
    <meta
      name="twitter:image:alt"
      content="Ryan Furrer, a software engineer, streamer, and blogger"
    />
    <meta name="generator" content={Astro.generator} />
    <script
      is:inline
      src="https://kit.fontawesome.com/dec2579292.js"
      crossorigin="anonymous"></script>
    <title>{pageTitle}</title>
  </head>
  <body>
    <header>
      <HeaderNavBar />
      <Hero heroHeader={heroHeader} heroDescription={heroDescription} />
    </header>
    <main id="main-fade-in">
      <section>
        <StoryblokComponent blok={content} />
      </section>
    </main>
    <Footer />
  </body>
</html>
