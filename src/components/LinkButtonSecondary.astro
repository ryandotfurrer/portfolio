---
export interface Props {
  linkURL: string;
  linkText: string;
}

const { linkURL, linkText }: Props = Astro.props;
---

<a
  href={linkURL}
  class="dark:hover-text-zinc-900 group flex w-full items-center justify-center gap-4 rounded px-6 py-3 text-zinc-900 outline outline-zinc-900 transition-transform duration-300 ease-in-out hover:text-zinc-900 md:hover:scale-105 lg:max-w-fit dark:text-zinc-50 dark:outline-zinc-50 hover:dark:text-zinc-50"
>
  <slot name="pre-icon" />
  {linkText}
</a>
