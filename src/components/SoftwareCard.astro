---
export interface Props {
  name: string;
  href: string;
}
const { name, href }: Props = Astro.props;
---

<a
  href={href}
  target="_blank"
  rel="noopener noreferrer"
  aria-label=`Check out ${name}`
  class="group duration-300 hover:scale-105"
>
  <div
    class="flow grid aspect-square items-baseline rounded bg-zinc-200 p-6 dark:bg-zinc-800"
  >
    <h3
      class="text-center text-xl group-hover:text-emerald-600 dark:group-hover:text-emerald-400"
    >
      {name}
    </h3>
    <slot />
  </div>
</a>
