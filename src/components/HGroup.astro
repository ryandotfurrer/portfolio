---
import Heading from './Heading.astro';

interface Props {
  pageTitle: string;
  pageDescription?: string;
}

const { pageTitle, pageDescription } = Astro.props;
---

<hgroup class="space-y-2 py-24 text-balance">
  <Heading level="h1" size="4xl">{pageTitle}</Heading>
  {pageDescription && <p class="text-xl leading-tight">{pageDescription}</p>}
</hgroup>
