<aside class="sticky top-3/4 z-50 flex justify-end align-top">
  <button
    id="go-to-top-btn"
    class="rounded border border-zinc-950 bg-emerald-200 p-2 text-zinc-950 dark:border-zinc-50 dark:bg-emerald-900 dark:text-zinc-50"
    ><svg
      width="24"
      height="24"
      viewBox="0 0 24 24"
      xmlns="http://www.w3.org/2000/svg"
      ><path
        fill="currentColor"
        d="M13 7.828V20h-2V7.828l-5.364 5.364l-1.414-1.414L12 4l7.778 7.778l-1.414 1.414z"
      ></path></svg
    ></button
  >
</aside>

<script>
  // const top = document.getElementById("top");
  const btn = document.getElementById("go-to-top-btn");

  btn?.addEventListener("click", () => {
    scrollTo(0, 0);
  });
</script>

<style>
  aside {
    animation-name: opacityAnimation;
    animation-direction: normal;
    animation-timeline: scroll(y);
  }

  @keyframes opacityAnimation {
    from {
      @apply opacity-0;
    }
    to {
      @apply opacity-100;
    }
  }
</style>
